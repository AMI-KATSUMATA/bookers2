<!--エラーメッセージ-->
<%= render 'layouts/error', book: @book %>
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>Editing Book</h1>
   <%= form_with model:@book, local:true do |f| %>
   <div class="form-group">
    <label for="inputTitle">Title</label><br/>
     <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%>
   </div>
   <div class="form-group">
    <label for="inputBody">Opinion</label><br/>
    <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"本文"%>
   </div>
   <div class="form-group">
   <%= f.submit "Update Book", class:'btn btn-success btn-sm text-light', type:'submit' %>
   </div>
   <% end %>

<!--投稿詳細・投稿一覧へのリンク-->
   <div>
    <%= link_to "Show", book_path, class:"link-primary" %>
    |
    <%= link_to "Back", books_path, class:"link-primary" %>
   </div>
  </div>
 </div>
</div>