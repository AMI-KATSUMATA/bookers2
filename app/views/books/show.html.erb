<div>User info
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table>
   <tr>
    <th>name</th>
    <td><%= @user.name %></td>
   </tr>
   <tr>
    <th>introduction</th>
    <td><%= @user.introduction %></td>
   </tr>
  </table>
 </div>

<!--プロフィール編集へのリンク-->
<div>
 <%= link_to "プロフィール編集", edit_user_path(@user) %>
</div>

<!--新規投稿フォーム-->
<h1>New Books</h1>
<%= form_with model: @new, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>




<table>Book detail
<tr>
  <!--トプ画とユーザーネーム-->
  <!--ユーザーネームからマイページへリンク-->
  <td>
     <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
     <%= link_to @book.user.name, user_path(@book.id) %>
  </td>

  <!--本のタイトル-->
  <!--タイトルから投稿詳細へリンク-->
  <td>
    <%= link_to @book.title, book_path(@book) %>
  </td>

  <!--本文-->
  <td>
    <%= @book.body %>
  </td>

  <!--投稿編集・削除リンク-->
  <% if @book.user == current_user %>
  <td>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  </td>
</tr>
  <% end %>

</table>