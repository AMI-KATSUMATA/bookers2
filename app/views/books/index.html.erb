<!--エラーメッセージ-->
<% if @new.errors.any? %>
  <%= @new.errors.count %>errors prohibited this obj from being saved:
  <% @new.errors.full_messages.each do |message| %>
    <ul>
     <li>
      <%= message %>
     </li>
    </ul>
  <% end %>
<% end %>

<div>User info
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table>
   <tr>
    <th>name</th>
    <td><%= @user.name %></td>
   </tr>
   <tr>
    <th>introduction</th>
    <td><%= @user.introduction %></td>
   </tr>
  </table>
 </div


<!--プロフィール編集へのリンク-->
<div>
 <%= link_to "プロフィール編集", edit_user_path(@user) %>
</div>

<!--新規投稿フォーム-->
<h1>New Books</h1>
<%= form_with model: @new, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<!--ユーザー一覧-->
<% @books.each do |book| %>
<table>Books
  <tr>
   <th>

   </th>
   <th>
    Title
   </th>
   <th>
    Opinion
   </th>
  </tr>

  <tr>
    <!--トプ画-->
    <!--トプ画からユーザーホームへリンク-->
   <td>
    <%= link_to attachment_image_tag(@user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"), user_path(book.id) %>
   </td>
     <!--本のタイトル-->
     <!--タイトルから投稿詳細にリンク-->
   <td>
    <%= link_to book.title, book_path(book.id) %>
   </td>
  <!--本文-->
   <td>
    <%= book.body %>
   </td>
  </tr>
</table>
<% end %>