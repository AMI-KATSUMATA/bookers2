<!--エラーメッセージ-->
<%= render 'layouts/error', book: @new %>

<div class="container px-5 px-sm-0">
 <div class="row">
 <!--部分テンプレ-->
  <div class="col-md-3">
   <%= render 'layouts/info', user: @user %>
   <%= render 'layouts/new', new: @new %>
  </div>

<!--投稿一覧-->
  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class="table">
    <thead>
     <tr>
      <th>

      </th>
      <th>
       Title
      </th>
      <th>
       Opinion
      </th>
     </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
     <tr>
    <!--トプ画-->
    <!--トプ画からユーザーホームへリンク-->
      <td>
       <%= link_to user_path(book.user_id) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
       <% end %>
      </td>
    <!--本のタイトル-->
    <!--タイトルから投稿詳細にリンク-->
      <td>
       <%= link_to book.title, book_path(book) %>
      </td>
    <!--本文-->
      <td>
       <%= book.body %>
      </td>
      <!--いいね-->
      <td>
       <% if book.favorited_by?(current_user) %>
        <p>
          <%= link_to book_favorites_path(book), method: :delete, class: 'text-danger' do %>
            ♥<%= book.favorites.count %>
          <% end %>
        </p>
       <% else %>
        <p>
          <%= link_to book_favorites_path(book), method: :post do %>
            ♡<%= book.favorites.count %>
          <% end %>
        </p>
       <% end %>
      </td>
      <!--コメント数-->
      <td>
       <p><%= link_to "コメント数:#{book.book_comments.count}", book_path(book.id) %></p>
      </td>
     </tr>
    <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
