<div>User info
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <p><%= @user.name %></p>
  <p><%= @user.introduction %></p>
</div>


<!--プロフィール編集へのリンク-->
<div>
 <%= link_to "プロフィール編集", edit_user_path(@user) %>
</div>

<!--新規投稿フォーム-->
<h1>New Books</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<!--ユーザー毎の投稿一覧-->
<% @books.each do |book| %>
<table>Books
<tr>
 <th>Title</th>
 <th>Opinion</th>
</tr>

 <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
 </tr>
</table>
<% end %>
<%= paginate @books %>