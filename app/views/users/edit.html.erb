<!--エラーメッセージ-->
<%= render 'layouts/error', book: @user %>

<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>User info</h1>

   <%= form_with model:@user, local:true do |f| %>
   <div class="form-group">
   <!--名前の編集-->
    <label for="inputName">Name</label><br/>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
   </div>
   <div class="form-group">
   <!--トプ画の編集-->
    <label for="inputImage">Image</label><br/>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
   </div>
    <!--自己紹介編集-->
   <div class="form-group">
    <label for="inputIntroduction">Introduction</label><br/>
    <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
   </div>
   <div class="form-group">
    <%= f.submit "Update User", class:'btn btn-secondary text-light', type:'submit' %>
   </div>
   <% end %>
  </div>
 </div>
</div>